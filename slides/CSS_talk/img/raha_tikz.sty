\def\listof#1{\expandafter\@listof#1+\@end}
\def\@listof#1+#2\@end{\def\@tempa{#1}\ifx\@tempa\@empty\else 
    \langle #1\rangle \fi
  \def\@tempa{#2}\ifx\@tempa\@empty\else,\@listof#2\@end\fi}
\def\stackof#1{\begin{array}{@{}>{\scriptstyle}c@{}}\expandafter\@stackof#1+\@end}
\def\@stackof#1+#2\@end{\def\@tempa{#1}\ifx\@tempa\@empty\else 
    \langle #1\rangle \fi
  \def\@tempa{#2}\ifx\@tempa\@empty\end{array}\else\\[-1mm]\@stackof#2\@end\fi}
